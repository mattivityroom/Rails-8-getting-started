<% cache @product do %>
    <h1>
        <%= @product.name %>
    </h1>

    <p>
        <%= @product.description %>
    </p>
<% end %>


<% if authenticated? %>
    <%= link_to "Edit", edit_product_path(@product) %>
    <%= button_to "Delete", @product, method: :delete, data: {
        turbo_confirm: "Are you sure?"
    } %>
<% end %>

<%= link_to "Back", products_path %>