<h1>Products</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
            <tr>
                <td>
                    <%= link_to(product.name, product) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>